<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.easytriangle">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AraeFunc"
            android:label="Right Triangle Area">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.easytriangle.ChooseActivity" />
        </activity>
        <activity android:name=".Radian"
            android:label="Unit Converter">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.easytriangle.ChooseActivity" />
        </activity>

        <activity
            android:name=".TanFunc"
            android:label="Tangent Function"
            android:parentActivityName=".ChooseActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.easytriangle.ChooseActivity" />
        </activity>
        <activity
            android:name=".CosFunc"
            android:label="Cosine Function"
            android:parentActivityName=".ChooseActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.easytriangle.ChooseActivity" />
        </activity>
        <activity
            android:name=".PyTherom"
            android:label="Pythagorean Theorem"
            android:parentActivityName=".ChooseActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.easytriangle.ChooseActivity" />
        </activity>
        <activity
            android:name=".Angles"
            android:label="Interior Angles"
            android:parentActivityName=".ChooseActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.easytriangle.ChooseActivity" />
        </activity>
        <activity
            android:name=".Sin"
            android:label="Sine Function"
            android:parentActivityName=".ChooseActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.easytriangle.ChooseActivity" />
        </activity>
        <activity
            android:name=".ChooseActivity"
            android:label="Easy Triangle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>